<controls:MetroWindow x:Class="AnimationMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:AnimationMaker.ViewModel"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        xmlns:behaviors="clr-namespace:AnimationMaker.Behaviors"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" MinHeight="1024" MinWidth="768" >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="3*" />
			<RowDefinition Height="15*" />
			<RowDefinition Height="3*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="27*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>

		<Border Grid.Row="0" Grid.Column="1">
			<Grid >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="15*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="15*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="15*" />
					<ColumnDefinition Width="100*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="2*" />
					<RowDefinition Height="7*" />
					<RowDefinition Height="2*" />
				</Grid.RowDefinitions>

				<ToggleButton Grid.Column="0" Grid.Row="1"
			              IsChecked="{Binding Path=CurrentFrame.Mode,Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static viewModel:EditMode.Select}}">
					<TextBlock FontSize="14" TextWrapping="Wrap">Select</TextBlock>
				</ToggleButton>
				<ToggleButton Grid.Column="2" Grid.Row="1"
			              IsChecked="{Binding Path=CurrentFrame.Mode,Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static viewModel:EditMode.AddPoint}}">
					<TextBlock FontSize="14" TextWrapping="Wrap">Add point</TextBlock>
				</ToggleButton>
				<ToggleButton Grid.Column="4" Grid.Row="1"
			              IsChecked="{Binding Path=CurrentFrame.Mode,Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static viewModel:EditMode.AddEdge}}">
					<TextBlock FontSize="14" TextWrapping="Wrap">Add edge</TextBlock>
				</ToggleButton>

				<TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding CurrentFrameIndex}" 
					   FontSize="18"
					   VerticalAlignment="Center"
					   TextAlignment="Right"
					   Margin="0,0,5,0"/>
			</Grid>
		</Border>

		<ItemsControl Grid.Column="1" Grid.Row="1" 
				 ItemsSource="{Binding CurrentFrame.Figures}" 
				 ItemTemplateSelector="{StaticResource FiguresTemplateSelector}" >
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<Canvas Background="LightGray">
						<i:Interaction.Behaviors>
							<behaviors:CommandClickBehavior Command="{Binding CurrentFrame.AddPoint}" 
															IsEnabled="{Binding CurrentFrame.Mode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static viewModel:EditMode.AddPoint}}" />
						</i:Interaction.Behaviors>
					</Canvas>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</Grid>
</controls:MetroWindow>